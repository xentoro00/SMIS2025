@{
    ViewData["Title"] = "Home Page";
}

<h2>Welcome to the Home Page!</h2>

<!-- Button to fetch grade details -->
<button id="loadGradeDetails">View Your Grades</button>

<!-- Container to display the grade details -->
<div id="gradeDetailsContainer"></div>

<script>
    document.getElementById("loadGradeDetails").addEventListener("click", function() {
        // Perform AJAX request to get the grade details
        fetch('@Url.Action("Details", "Grades")', {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.text())
        .then(data => {
            // Display the grade details in the container
            document.getElementById("gradeDetailsContainer").innerHTML = data;
        })
        .catch(error => {
            console.error('Error fetching grade details:', error);
        });
    });
</script>
